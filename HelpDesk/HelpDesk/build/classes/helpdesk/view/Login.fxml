<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="helpdesk.controller.LoginController">
    <children>
      <AnchorPane layoutX="3.0" layoutY="160.0" minHeight="450.0" minWidth="800.0" prefHeight="450.0" prefWidth="800.0" AnchorPane.bottomAnchor="160.0" />
      <ImageView fitHeight="450.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="160.0">
         <image>
            <Image url="@../resources/tela_login.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="tfUsername" layoutX="341.0" layoutY="299.0" promptText="Nome de usuário" />
      <PasswordField fx:id="pfPassword" layoutX="341.0" layoutY="337.0" promptText="Senha do usuário" />
      <CheckBox fx:id="cbAtendente" layoutX="340.0" layoutY="370.0" mnemonicParsing="false" onAction="#cbAtendenteOnAction" text="Atendente" />
      <CheckBox fx:id="cbCliente" layoutX="427.0" layoutY="370.0" mnemonicParsing="false" onAction="#cbClienteOnAction" text="Solicitante" />
      <Button fx:id="btnEnter" layoutX="340.0" layoutY="398.0" mnemonicParsing="false" onAction="#btnEnterOnAction" prefHeight="25.0" prefWidth="70.0" text="Entrar" />
      <Button fx:id="btnExit" layoutX="421.0" layoutY="398.0" mnemonicParsing="false" onAction="#btnExitOnAction" prefHeight="25.0" prefWidth="70.0" text="Sair" />
    </children>
   <padding>
      <Insets bottom="-160.0" />
   </padding>
</AnchorPane>
